<p id="notice"><%= notice %></p>

<h1>Listing Catalogs Suppliers</h1>

<div class= "table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Business name</th>
      <th>Contact</th>
      <th>Phones</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogs_suppliers.each do |catalogs_supplier| %>
      <tr>
        <td><%= catalogs_supplier.business_name %></td>
        <td><%= catalogs_supplier.contact %></td>
        <td><%= catalogs_supplier.phones %></td>
        <td><%= catalogs_supplier.email %></td>
        <td><a class="btn btn-ttc" <%= link_to '<i class="fa fa-eye" alt="Show" title="Show"></i>'.html_safe, catalogs_supplier %></a></td>
        <td><a class="btn btn-ttc" <%= link_to '<i class="fa fa-pencil-square-o" alt="Edit" title="Edit"></i>'.html_safe, edit_catalogs_supplier_path(catalogs_supplier) %></td>
        <td><a class="btn btn-ttc" <%= link_to '<i class="fa fa-trash-o" alt="Trash" title="Trash"></i>'.html_safe, catalogs_supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<a class="btn btn-ttc" <%= link_to 'New Supplier', new_catalogs_supplier_path %></a>
